
[mysqladmin]
user=root

[mysqld]
server-id=1
basedir=/opt/rubystack/mysql
datadir=/opt/rubystack/mysql/data
port=3306
socket=/opt/rubystack/mysql/tmp/mysql.sock
tmpdir=/opt/rubystack/mysql/tmp
max_allowed_packet=16M
bind-address=127.0.0.1
log-bin=/opt/rubystack/mysql/log-bin/log-bin.index

character-set-server=UTF8
collation-server=utf8_general_ci
[mysqld_safe]
mysqld=mysqld.bin

[client]
port=3306
socket=/opt/rubystack/mysql/tmp/mysql.sock

default-character-set=UTF8
[manager]
port=3306
socket=/opt/rubystack/mysql/tmp/mysql.sock
pid-file=/opt/rubystack/mysql/tmp/manager.pid
default-mysqld-path=/opt/rubystack/mysql/bin/mysqld.bin

