
[mysqladmin]
user=root

[mysqld]
server-id=3
basedir=/opt/rubystack/mysql_slave_readonly
datadir=/opt/rubystack/mysql_slave_readonly/data
port=3308
socket=/opt/rubystack/mysql_slave_readonly/tmp/mysql.sock
tmpdir=/opt/rubystack/mysql_slave_readonly/tmp
max_allowed_packet=16M
bind-address=127.0.0.1
log-bin=/opt/rubystack/mysql_slave_readonly/log-bin/log-bin.index

character-set-server=UTF8
collation-server=utf8_general_ci
[mysqld_safe]
mysqld=mysqld.bin

[client]
port=3308
socket=/opt/rubystack/mysql_slave_readonly/tmp/mysql.sock

default-character-set=UTF8
[manager]
port=3306
socket=/opt/rubystack/mysql_slave_readonly/tmp/mysql.sock
pid-file=/opt/rubystack/mysql_slave_readonly/tmp/manager.pid
default-mysqld-path=/opt/rubystack/mysql_slave_readonly/bin/mysqld.bin

