prefix=/opt/redmine/apache2
exec_prefix=/opt/redmine/apache2
libdir=${prefix}/lib
APRUTIL_MAJOR_VERSION=1
includedir=/opt/redmine/apache2/include

Name: APR Utils
Description: Companion library for APR
Version: 1.4.1
# assume that apr-util requires libapr of same major version
Requires: apr-1
Libs: -L${libdir} -laprutil-${APRUTIL_MAJOR_VERSION} -lldap -llber -llber -lexpat
Cflags: -I${includedir}
