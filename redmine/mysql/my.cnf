
[mysqladmin]
user=root

[mysqld]
basedir=/opt/redmine/mysql
datadir=/opt/redmine/mysql/data
port=3306
socket=/opt/redmine/mysql/tmp/mysql.sock
tmpdir=/opt/redmine/mysql/tmp
bind-address=127.0.0.1

character-set-server=UTF8
collation-server=utf8_general_ci
[mysqld_safe]
mysqld=mysqld.bin

[client]
port=3306
socket=/opt/redmine/mysql/tmp/mysql.sock

default-character-set=UTF8
[manager]
port=3306
socket=/opt/redmine/mysql/tmp/mysql.sock
pid-file=/opt/redmine/mysql/tmp/manager.pid
default-mysqld-path=/opt/redmine/mysql/bin/mysqld.bin

