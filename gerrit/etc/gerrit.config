[gerrit]
	basePath = /opt/git_repo
	canonicalWebUrl = http://elastos.org/review/
[database]
	type = MYSQL
	hostname = localhost
	database = gerrit
	username = root
[auth]
	type = OPENID
[sendemail]
	smtpServer = mail.elastos.org
	smtpUser = elastos_pm
[container]
	user = root
	javaHome = /opt/jenkins/java/jre
[sshd]
	listenAddress = *:29418
[httpd]
	listenUrl = http://*:8080/
[cache]
	directory = cache
